#!/usr/bin/env python
import sys
from pact_test.pact import verify


def print_help():
    print('                                ')
    print('================================')
    print('Welcome to Pact Test for Python!')
    print('--------------------------------')
    print('       Available Commands       ')
    print('                                ')
    print('verify..........Verify Pact test')
    print('================================')
    print('                                ')


if len(sys.argv) is 1: print_help()
else: verify() if sys.argv[1] == 'verify' else print_help()
